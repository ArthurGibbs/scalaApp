# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# landing page for the api
GET     /                               controllers.HomeController.index()
GET     /test                           controllers.AuthController.test()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)

### NoDocs ###
GET     /docs                           controllers.Default.redirect(to = "/docs/swagger-ui/index.html")
### NoDocs ###
GET     /docs/swagger-ui/*file          controllers.Assets.at(path:String="/public/swagger-ui", file:String)

###
#   summary: post a user
#   tags:
#       - registration
#   requestBody:
#     content:
#        application/json:
#          schema:
#            type: object
#          examples:
#            Basic:
#              value:
#                username:
#                   "123"
#                email:
#                   "9780987654321"
#                password:
#                   "password"
#   responses:
#       '200':
#         description: OK
#         content:
#            application/json:
#              schema:
#                type: DisplayUser
###
+nocsrf
POST     /api/users                     controllers.AuthController.registerUser()

###
#   summary: post a user
#   tags:
#       - registration
#   requestBody:
#     content:
#        application/json:
#          schema:
#            type: object
#          examples:
#            Basic:
#              value:
#                usernameOrEmail:
#                   "123"
#                password:
#                   "password"
#   responses:
#       '200':
#         description: OK
#         content:
#            application/json:
#              schema:
#                type: DisplayUser
###
+nocsrf
POST     /api/users/login                     controllers.AuthController.login()

###
#   summary: finds if username is free
#   tags:
#       - registration
# parameters:
#        - in: path
#          name: username
#          schema:
#            type: string
#          required: true
#          description: the username to lookup
#   responses:
#       '200':
#         description: OK
#         content:
#            application/json:
#              schema:
#                type: boolean
###
+nocsrf
GET     /api/users/isUsernameUnused/:username       controllers.AuthController.isUsernameUnused(username: String)

###
#   summary: finds if email is unused
#   tags:
#       - registration
#   parameters:
#        - in: query
#          name: id
#          schema:
#            type: string
#          description: The number of items to skip before starting to collect the result set
#        - in: query
#          name: code
#          schema:
#            type: string
#          description: The numbers of items to return
#   responses:
#       '200':
#         description: OK
#         content:
#            application/json:
#              schema:
#                type: DisplayUser
###
GET     /api/users/verify-email                    controllers.AuthController.verifyEmail(id: Int, code: String)

###
#   summary: finds if email is unused
#   tags:
#       - registration
#   parameters:
#        - in: path
#          name: email
#          schema:
#            type: string
#          required: true
#          description: the email to lookup\
#   responses:
#       '200':
#         description: OK
#         content:
#            application/json:
#              schema:
#                type: boolean
###
+nocsrf
GET     /api/users/isEmailUnused/:email            controllers.AuthController.isEmailUnused(email: String)

###
#   summary: gets a list of users
#   tags:
#       - users
#   responses:
#       '200':
#         description: OK
#         content:
#            application/json:
#              schema:
#                type: list[DisplayUser]
###
GET     /api/users                      controllers.UserController.listUsers()

###
#   summary: gets a user by name
#   tags:
#       - users
# parameters:
#        - in: path
#          name: username
#          schema:
#            type: string
#          required: true
#          description: the username to lookup
#   responses:
#       '200':
#         description: OK
#         content:
#            application/json:
#              schema:
#                type: option[DisplayUser]
###
GET     /api/users/byName/{username}    controllers.UserController.getUserByName(username: Option[String])

